<div style="margin-left: 5%;">
      <form>

      <div class="form-row" style="margin-left: 30%;">
    
          <div class="col-xs-4"style="width:40%;">
            <input type="number" value="{{id_ft}}" name="id" style="display: none;">
            <label for="inputEmail4" class="form-label" style="display: flex;">nombre del producto(*)</label>
            <input type="number" class="form-control" value="{{nombre}}"  placeholder="nombre" aria-label="Last name" id="nombre" name="nombre">
          </div>
        </div>
          
          
         
            <div class="form-row">
        
              <div class="col-xs-4" style="width: 27%;">
                
                
               <label for="">Insumo(*)</label>
                <select name="insumo" id="insumo" class="form-control">
                  <option value="1">Papel Bond</option>
                  <option value="2">Sellastrip</option>
                  <option value="3">Guillotinas</option>
                  <option value="4">Plumígrafos</option>
                </select>
                
              </div>

              <div class="col-xs-4" >
                <label for="inputEmail4" class="form-label">Cantidad del insumo(*)</label>
        
                <input type="number" class="form-control" value="{{cantidad_insumo}}"  placeholder="cantidad_insumo" aria-label="Last name" id="cantidad_insumo" name="cantidad_insumo">
              </div>
            </div>
          
       
          <br>
          <div class="form-row">
            

            <div class="col-xs-4" style="width: 27%; ">
            
            </div>
            <div class="col-xs-4"  >
              <label for="inputEmail4" class="form-label">costo del insumo</label>
      
              <input type="number" class="form-control" value="{{costo_insumo}}"  placeholder="costo_insumo" aria-label="Last name" id="costo_insumo" name="costo_insumo">
            </div>
             <div class="card" style="width: 45%; position: absolute; left: 40%;" >
        
              <div class="card-body" >
                  <input type="file" name="imagen_final_producto" id="imagen_final_producto" >
               
              </div>
            </div>
            <div class="col-xs-4"  >
              <label for="inputEmail4" class="form-label">costo final del producto</del></label>
      
              <input type="number" class="form-control" value="{{costo_final_producto}}"  placeholder="costo_final_producto" aria-label="Last name" id="costo_final_producto" name="costo_final_producto">
            </div>
          </div>
        </div>
          <br>
          <center>
          <div class="md-form" style="width: 35%;">
                <label for="form7">Detalles</label>
                <textarea id="detalle" name="detalle" value="{{detalle}}" class="md-textarea form-control" rows="" style=" border: 1px solid black;"></textarea>
            </div>
          </center>
            <div class="col-12 row mr-5">
                <button type="submit" class="btn btn-primary mr-5" onclick="validarFicha()">Actualizar</button>
                <button type="button" class="btn btn-danger ">Cancelar</button>
              </div>
            
          </div> 
        </form>
        {{/each}}

                     
