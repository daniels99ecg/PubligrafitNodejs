<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>P-G Actualizar productos</title>
  <!-- Favicon -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">


  <link rel="shortcut icon" href="./img/svg/logo.svg" type="image/x-icon">
  <!-- Custom styles -->
  <link rel="stylesheet" href="../css/style.css">

  

</head>

<body>
  <div class="layer"></div>
<!-- ! Body -->
<a class="skip-link sr-only" href="#skip-target">Skip to content</a>
<div class="page-flex">
  <!-- ! Sidebar -->
  <aside class="sidebar" id="header">
{{>header}}
</aside>
  <div class="main-wrapper">
    <!-- ! Main nav -->
    <nav class="main-nav--bg">
      <script src="./validar/nav.js"></script>
    </nav>
    <!-- ! Main -->
   <script src="validar/validar.js"></script>
  <div class="card" style="width: 70%;">

    <div class="card-body">
      {{#each title}}
      <form action="/producto/update/in/" method="post" id="producto">
      <div class="text-center">
      <img class="img-fluid ml-5" src=https://dimidium.com.ec/wp-content/uploads/2020/06/INSUMOS.png alt="">
    </div>

            <div class="form-group" style="width: 250px;">
              <input type="number" value="{{id_producto}}" name="id" style="display: none;">
              <label for="exampleInputPassword1">Nombre del Producto(*)</label>
              <input type="text" class="form-control" value="{{nombre_producto}}"  placeholder="producto" aria-label="Last name" id="producto" name="producto">
            </div>

            <div class="card" style="width: 45%; position: absolute; left: 40%;" >
        
              <div class="card-body" >
                  <input type="file" name="imagen" id="imagen">
                  <input type="text" class="form-control" value="{{imagen}}"  placeholder="imagen" aria-label="Last name" id="imagen" name="imagen">
               
              </div>
            </div>


            <div class="form-group" style="width: 250px;">
                <label for="exampleInputPassword1">Precio(*)</label>
                <input type="number" class="form-control" value="{{precio}}"  placeholder="precio" aria-label="Last name" id="precio" name="precio">
              </div>
              <div class="form-group" style="width: 250px;">
                <label for="exampleInputPassword1">Cantidad(*)</label>
                <input type="number" class="form-control" value="{{cantidad_producto}}"  placeholder="cantidad" aria-label="Last name" id="cantidad" name="cantidad">
              </div>

              <div class="form-group" style="width: 250px;">
                <label for="exampleInputPassword1">Stock</label>
                <input type="number" class="form-control" value="{{stock}}"  placeholder="stock" aria-label="Last name" id="stock" name="stock">
              </div>

              
            <!--Material textarea-->
            
            <br><br>
            <select name="categoria" id="categoria" >
                <option value="1">Publicidad</option>
                <option value="2">Papeleria</option>
                <option value="3">Papeleria</option>
                <option value="4">Documentos</option>
            </select>
            



            <div class="col-12 row mr-5">
                <button type="submit" class="btn btn-primary mr-5" onclick="validarProducto()">Actualizar</button>
                <a href="/producto"><button type="button" class="btn btn-danger ">Cancelar</button></a>
              </div>
            </form>
            {{/each}}
          </div>               
</div>
  




  </div>
</div>


<!-- codigo de modal -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="sweetalert2.min.js"></script>
<link rel="stylesheet" href="sweetalert2.min.css">
<!-- Chart library -->
<script src="./plugins/chart.min.js"></script>
<!-- Icons library -->
<script src="plugins/feather.min.js"></script>
<!-- Custom scripts -->
<script src="js/script.js"></script>
</body>

</html>