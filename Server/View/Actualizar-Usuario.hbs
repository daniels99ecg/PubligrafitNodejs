<body>
   

  <div class="layer"></div>
<!-- ! Body -->
<a class="skip-link sr-only" href="#skip-target">Skip to content</a>
<div class="page-flex">
 
  <!-- ! Sidebar -->
  <aside class="sidebar" id="header">
    {{>header}}
</aside>

  <div class="main-wrapper">
    <!-- ! Main nav -->
    <nav class="main-nav--bg">
      <script src="./validar/nav.js"></script>
    </nav>
  

  <div class="card" >

    <div class="card-body">
{{#each title}}
   <form action="/usuarios/update/in/" method="post" id="pruebas">
    <div class="text-center">
    <img class="img-fluid ml-5" src="https://cdn-icons-png.flaticon.com/512/359/359858.png" alt="">
  </div>
  
    <div class="form-row">
    
      
      <div class="col-xs-4">
        <input type="text" value="{{id_usuario}}" name="id" style="display: none;"> 
        <label for="inputEmail4" class="form-label">Nombres(*)</label>

        <input type="text" class="form-control" value="{{nombres}}"  placeholder="Nombre" aria-label="Last name" id="nombre" name="nombres">
      </div>
      <div class="col-xs-4">
        <label for="inputEmail4" class="form-label">Apellidos(*)</label>

        <input type="text" class="form-control" value="{{apellidos}}" placeholder="Apellidos" aria-label="First name" id="apellido" name="apellidos">
      </div>
      
      
     </div>

     <div class="form-row">
      
      <div class="col-xs-4">
        <label for="inputEmail4" class="form-label">Correo electronico(*)</label>

        <input type="text" class="form-control" value="{{email}}" placeholder="Correo electronico" aria-label="First name" id="correo" name="email">
      </div>
      <div class="col-xs-4">
        <label for="inputEmail4" class="form-label">Contraseña(*)</label>

        <input type="text" class="form-control" value="{{contrasena}}" placeholder="Contraseña" aria-label="Last name" id="contrasena" name="contrasena">
      </div>
     </div>

     <div class="form-row">
      <div class="col-xs-4" style="margin-left: 22%;">
      <label for="inputEmail4" class="form-label">Confirmar Contraseña(*)</label>

      <input type="text" class="form-control" placeholder="Confirmar Contraseña" aria-label="Last name" id="confirmar">
     </div>
     </div>

    
     <div class="roles row">
      <select  id="" class="roles2" name="fk_rol2">
        <option value="1">Administrador</option>
        <option value="2">Empleado</option>
      </select>
      
     </div>

      <div class="col-12 row mr-5">
      <button  type="button" class="btn btn-primary mr-5" onclick="validart()">Actualizar</button>
      <a href="/usuarios"><button type="button" class="btn btn-danger ">Cancelar</button></a>
     </div>
    
 </div>
  </div>
</form>

   <script src="../validar/validarU-R.js"></script>
{{/each}}
