<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>P-G Listar Clientes</title>
  <!-- Favicon -->
<link rel="shortcut icon" href="../img/PubliGrafit2.png" type="image/x-icon">
  <!-- Custom styles -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

  <link rel="stylesheet" href="../css/style.css">

  <script src="../validar/validarVC.js"></script>


  

</head>

<body>
  <div class="layer"></div>
<!-- ! Body -->
<a class="skip-link sr-only" href="#skip-target">Skip to content</a>
<div class="page-flex">
  <!-- ! Sidebar -->
  <aside class="sidebar" id="header">
   {{>header}}
</aside>
  <div class="main-wrapper">
    <!-- ! Main nav -->
    <nav class="main-nav--bg">
      <script src="../validar/nav.js"></script>
    </nav>
    <!-- ! Main -->
   
<br>
<br>
<div style="margin-left: 62%;">
<form action="/clientes/search/{{title.dni_cliente}}" method="post">

<div class="input-group">
<input type="text" placeholder="DNI Cliente" name="id" style="border-radius:5px; border:none;">
<input type="submit" class="btn btn-primary" style="width:20.7%" value="Buscar">
</div>
</div>
<br>
<br>

<div class="regis2">
<a class="btn btn-primary ml-4" href="/clientes/create" role="button">Nuevo Registro</a>
</div>
<br>
<br>
    <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">DNI</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Teléfono</th>
            <th scope="col">Dirección</th>
            <th scope="col">Correo Electrónico</th>
            <th scope="col">Estado</th>
            <th scope="col">Acción</th>
          </tr>
        </thead>
        <tbody>
           {{#each title}}
                <tr>
                    <td>{{dni_cliente}}</td>
                    <td>{{nombres}}</td>
                    <td>{{apellidos}}</td>
                    <td>{{telefono}}</td>
                    <td>{{direccion}}</td>
                    <td>{{email}}</td>
            <td><div class="switch-button">
              <input type="checkbox" name="switch-button" id="switch-label" class="switch-button__checkbox" checked>
              <label for="switch-label" class="switch-button__label"></label>
          </div></td>

            <td>
               <a href="/clientes/update/{{dni_cliente}}"><button type="button" class="btn btn-outline-secondary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-clockwise" viewBox="0 0 16 16">
    <path fill-rule="evenodd" d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2v1z"></path>
    <path d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466z"></path>
  </svg>
                  </button></a>


                  <a onclick="eliminarCliente({{dni_cliente}})">
                  <button type="button" class="btn btn-outline-secondary" name="eliminar">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"></path>
    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"></path>
  </svg>
                    
                  </button></a>
            </td>
          </tr>
{{/each}}
        </tbody>
      </table>
  
    <!-- ! Footer -->

  </div>
</div>

<!-- codigo de modal -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="sweetalert2.min.js"></script>
<link rel="stylesheet" href="sweetalert2.min.css">
<!-- Chart library -->
<script src="../plugins/chart.min.js"></script>
<!-- Icons library -->
<script src="../plugins/feather.min.js"></script>
<!-- Custom scripts -->
<script src="../js/script.js"></script>
</body>

</html>