<br>
<br>
<br>
<div style="margin-left: 60%;">
<form action="/compras/buscar/{{title.id_compra}}" method="post">
<div class="input-group">

       <input type="text" placeholder="Buscar Id" name="id" style="border-radius:5px; border:none;">
      <input type="submit" class="btn btn-primary" value="Buscar">
   
      </div>
  <br>
</form>
</div>

<a class="btn btn-primary ml-4" href="/compras/create" role="button">Nuevo Registro</a>

<br>
<br>

  
<br>
<br>
    <table class="table table-hover ml-3">
        <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Fecha de compra</th>
            <th scope="col">Total</th>
            <th scope="col">Estado</th>
            <th scope="col">Detalle</th>

          </tr>
        </thead>
        <tbody>
          <tr>
            {{#each title}}
            <tr id="lista">
            <td>{{id_compra}}</td>
            <td>{{fecha}}</td>
            <td>{{total}}</td>
            {{!<td><input type="checkbox" name=""></td>}}
            <td><div class="switch-button">
              <input type="checkbox" name="switch-button" id="switch-label" onclick="estado()" checked class="switch-button__checkbox" >
              <label for="switch-label" class="switch-button__label"></label>
          </div></td>
          <td><a class="btn btn-primary ml-4" onclick="detalle3({{id_compra}})" role="button"  data-bs-toggle="modal" data-bs-target="#exampleModal"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
          <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
          </svg></td></a>
            
          </tr>
    {{/each}}
        </tbody>
      </table>
  
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
 <script src="sweetalert2.min.js"></script>
