<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>P-G Registrar Usuarios</title>
  <!-- Favicon -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">


  <link rel="shortcut icon" href="./img/svg/logo.svg" type="image/x-icon">
  <!-- Custom styles -->
  <link rel="stylesheet" href="./css/style.css">

  

</head>

<body>
  <div class="layer"></div>
<!-- ! Body -->
<a class="skip-link sr-only" href="#skip-target">Skip to content</a>
<div class="page-flex">
  <!-- ! Sidebar -->
  <aside class="sidebar" id="header">
    {{>header}}
</aside>
  <div class="main-wrapper">
    <!-- ! Main nav -->
    <nav class="main-nav--bg">
      <script src="./validar/nav.js"></script>
    </nav>
    <!-- ! Main -->
   <script src="validar/validar.js"></script>
  <div class="card" style="width: 70%;">

    <div class="card-body">
      <form action="/producto/save" method="post" id="producto">
      <div class="text-center">
      <img class="img-fluid ml-5" src=https://dimidium.com.ec/wp-content/uploads/2020/06/INSUMOS.png alt="">
    </div>
      

            <div class="form-group" style="width: 250px;">
              <label for="exampleInputPassword1">Nombre del Producto(*)</label>
              <input type="text" class="form-control" id="producto" placeholder="Producto" name="producto">
            </div>

            <div  style="position: absolute; left: 45%; top:40%;" >
        
              <div >
                  <input type="file" class=" form-control-sm" name="imagen" id="imagen" >
               
              </div>
            </div>


            <div class="form-group" style="width: 250px;">
                <label for="exampleInputPassword1">Precio(*)</label>
                <input type="number" class="form-control" id="precio" placeholder="Precio" name="precio">
              </div>
              <div class="form-group" style="width: 250px;">
                <label for="exampleInputPassword1">Cantidad(*)</label>
                <input type="number" class="form-control" id="cantidad" placeholder="Cantidad" name="cantidad">
              </div>

              <div class="form-group" style="width: 250px;">
                <label for="exampleInputPassword1">Stock</label>
                <input type="number" class="form-control" id="stock" placeholder="Stock" name="stock">
              </div>

              
            <!--Material textarea-->
            
            <br><br>
            <select name="categoria" id="categoria" >
              {{#each title}}
                <option value="{{id_categoria}}">{{categoria}}</option>
                {{/each}}
            </select>



            <div class="col-12 row mr-5">
                <button type="button" class="btn btn-primary mr-5" onclick="validarProducto()">Registrar</button>
                <a href="/producto"><button type="button" class="btn btn-danger ">Cancelar</button></a>
              </div>
            </form>
          </div>               
</div>
  



    <!-- ! Footer -->

  </div>
</div>


<!-- codigo de modal -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="sweetalert2.min.js"></script>
<link rel="stylesheet" href="sweetalert2.min.css">
<!-- Chart library -->
<script src="./plugins/chart.min.js"></script>
<!-- Icons library -->
<script src="plugins/feather.min.js"></script>
<!-- Custom scripts -->
<script src="js/script.js"></script>
</body>

</html>