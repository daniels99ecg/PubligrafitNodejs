<!-- ! Body -->
<a class="skip-link sr-only" href="#skip-target">Skip to content</a>
<div class="page-flex">
  <!-- ! Sidebar -->
  <aside class="sidebar" id="header">
    {{>header}}
</aside>
  <div class="main-wrapper">
    <!-- ! Main nav -->
    <nav class="main-nav--bg">
      {{>nav}}
    </nav>
    <!-- ! Main -->
   
<br>
<br>
<div style="margin-left: 62%;">
<form action="searching/{{title.c_dni_cliente}}" method="post">

<div class="input-group">
<input type="text" placeholder="DNI Cliente" name="id" style="border-radius:5px; border:none;">
<input type="submit" class="btn btn-primary" style="width:20.7%" value="Buscar">
</div>
<br>
<br>

</form>
</div>
<div class="regis">
<a class="btn btn-primary ml-4" href="create" role="button">Nuevo Registro</a>
</div>

<div class="repo">
<a class="btn btn-primary ml-4" href="reporte" role="button" onclick="Reportar()" id="reportar">Reporte</a>
</div>

<div class="dato3 col">
    <label for="inputEmail4" class="form-label">Seleccionar Fecha</label>
    <input type="date" class="form-control" placeholder="Fecha"  id="fecha">
</div>    

<div class="dato4 col">
    <label for="inputEmail4" class="form-label">Mostrar Registros</label>

    
    <input type="number" class="form-control" placeholder=""  id="registros">
</div>   
<br>
<br>
<div style="width: 100%; height:600px; overflow-y:scroll; overflow-x:hidden;">
    <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Fecha</th>
            <th scope="col">Total</th>
            <th scope="col">Estado</th>
            <th scope="col">Detalles</th>
          </tr>
        </thead>
        <tbody>
 {{#each title}}
                <tr id="lista">
                    <td>{{id_venta}}</td>
                    <td>{{fecha}}</td>
                    <td>{{total}}</td>
                   
                    
            <td><div class="switch-button">

              <input type="checkbox" name="switch-button" id="switch-label"  checked onclick="estado()" class="switch-button__checkbox" id="checkboxDesactivar">
              <label for="switch-label" class="switch-button__label"></label>
          </div></td>

            <td><a class="btn btn-primary ml-4" onclick="detalle({{id_venta}})" role="button"  data-bs-toggle="modal" data-bs-target="#exampleModal"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
